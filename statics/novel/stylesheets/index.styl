@import "./common"
#contentContainer
  width CONTENT_WIDTH
  margin HEADER_HEIGHT + SPACING_VALUE auto auto
  .waterfalls
    width CONTENT_WIDTH - 10
    margin auto
    padding 5px 0
    overflow hidden
    .waterfall
      float left
      .waterfallItem
        margin-right 15px
        .articleContainer
          padding 10px
          background-color white
          box-shadow 0 1px 3px rgba(34, 25, 25, 0.4)
          margin-bottom 15px
          .title
            font-size 20px
          .novelArchor
            display block
            .frontcover
              display block
              width 130px
        .infoList
          background-color #efefef
          color #ad9c9c
          padding 5px 0
          .infoItem
            overflow hidden
            padding 5px 10px
            p
              margin 0
            .avatar
              float left
              margin 0 5px
              border 2px solid #080808
              img
                width 40px
          .authorInfo
            border-bottom 1px solid #ededed
          .commenterInfo
            border-top 1px solid white