include ./mixins

extends ./layout
block bodyContainer
  include ./header
  - fileImporter.importCss(['/statics/blog/stylesheets/index.styl']);
  - fileImporter.importJs('/statics/blog/javascripts/index.coffee')
  #contentContainer
    #slideBar
      include ./about
      include ./recommendations
      include ./utils
    - var articles = viewData.articles;
    if articles
      .articles
        each article in articles
          mixin article(article)