    .editor
      .title
        span.tip 标题：
        input(type='text', placeholder='请输入你的技术问题？')
      .tags
        span.tip 分类：
        a.btn(href='javascript:;') node
        a.btn(href='javascript:;') javascript
        a.btn(href='javascript:;') jQuery
        a.btn(href='javascript:;') node
        a.btn(href='javascript:;') others
      .ctrlBtn
        a.btn.submit(href='javascript:;') 保存
        a.btn.example(href='javascript:;') 示例(markdown)
